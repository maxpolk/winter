License located at http://www.gnu.org/licenses/agpl-3.0.html
'''
import sys

# We are in a bin subdir, but parent dir is where packages are found
sys.path.append ("..")

from winter.cli import setupOptions, setupSystem, runCommands, long_description

# Setup options
(default_options, options, arguments) = setupOptions (sys.argv)
if (options.verbose):
    print long_description

# Setup system and run it
interwiki = setupSystem (default_options, options)
runCommands (interwiki, arguments)
