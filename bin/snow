import sys
import os

# We are in a bin subdir, but parent dir is where packages are found
sys.path.append (os.path.join (os.path.dirname (__file__), '..'))

from winter.server import setupOptions, setupSystem, runCommands, long_description

# Setup options
options = setupOptions (sys.argv[1:])
if (options.verbose):
    print long_description

# Setup system and run it
interwiki = setupSystem (options)
runCommands (interwiki)
